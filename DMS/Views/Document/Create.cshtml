@model DataLayer.Document

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    input[type=text],select, textarea, password {
        width: 100%;
        padding: 6px;
        border: 1px solid #ccc;
        border-radius: 4px;
        resize: vertical;
    }
    input[type=file] {
        width: 100%;
        padding: 4px;
        border: 1px solid #ccc;
        border-radius: 4px;
        resize: vertical;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Document</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item">Document </li>
                    <li class="breadcrumb-item active">Create </li>

                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post"
              enctype="multipart/form-data">
            @if (!string.IsNullOrEmpty(ViewBag.success))
             {
        <div class="alert alert-success" role="alert">
            <strong>Success!</strong> @ViewBag.success.
        </div>}
            @if (!string.IsNullOrEmpty(ViewBag.error))
            {
        <div class="alert alert-warning" role="alert">
            <strong>Failed!</strong> @ViewBag.error.
        </div>}

            <div class="row">
                <div class="col">
                    <input type="file" name="file" />
                </div>
                <div class="col">
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                    <select name="CategoryId">


                        @foreach (var i in ViewBag.categories)
                {

                    <option value="@i.CategoryId">@i.CategoryName</option>
        }

                    </select>
                </div>


                <button type="submit" class="btn btn-info" style="float:right;">Save</button>

            </div>
        </form>
    </div>

</div>

<div>
  
</div>

